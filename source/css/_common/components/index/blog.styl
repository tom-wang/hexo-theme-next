.mod-side-sec {
    margin-bottom: 20px;
}
.archives, .friendlinks {
    +mobile() { display: none; }
}
.mod-side-sec-hd {
    position: relative;
    padding-left: 15px;
    height: 30px;
}
.mod-side-sec-hd h2 {
    font-size: 16px;
    font-weight: normal;
    line-height: 30px;
}
.mod-side-sec-hd:before {
    content: ' ';
    position: absolute;
    left: 0;
    height: 100%;
    width: 3px;
    background: $red;
}
.mod-side-sec ul {
    list-style: none;
    padding: 0;
}
.mod-side-sec-bd {
    padding: 10px 15px;
}
.products .mod-side-sec-bd {
    padding-left: 0;
    padding-right: 0;
}
.mod-side-list li, .archive-list li {
    margin-bottom: 8px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 16px;
}
.mod-side-list li a:hover, .archive-list li a:hover {
    color: $red;
}
.archive-list-count::before {
    content: ' (';
}
.archive-list-count::after {
    content: ')';
}
.pager {
    width: 100%;
    height: 30px;
    display: flex;
    justify-content: center;
    margin-top: 50px;
}
.pager a {
    color: #fff;
    background: $red;
    font-weight: normal;
    font-size: 16px;
    padding: 0 10px;
    margin-left: 10px;
    line-height: 30px;
}
.post-item a:hover {
    color: #555;
}
