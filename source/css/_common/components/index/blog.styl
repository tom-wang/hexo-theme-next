/*博客 左图右文 - 文字设定*/
.limg-rdesc{
    transform: translateX(1px) translateY(1px);
    transition: all .2s ease;
    border: 1px solid #eee;
    border-radius: 3px;
    overflow: hidden;
}
.limg-rdesc:hover {
    transform: translateX(-1px) translateY(-1px);
    box-shadow: 0 26px 40px -24px rgba(0,36,100,.3);
    transition: all .2s ease;
}
.limg-rdesc>div.post-thumb{
    padding: 0;
    height: 140px;
}
.limg-rdesc>div.post-thumb div {
    height:100%;
    background-size:cover;
    background-position: center center;
    background-repeat: no-repeat;
}
.limg-rdesc > div.post-info {
    padding: 0;
}
.right-desc>p{
    margin: 10px;
}
#blog a {
    text-decoration: none;
}
.cates {
    width: 100%;
   margin-bottom:15px;
}
.cates ul {
    display: flex;
    list-style: none;
    margin-bottom: 0;
    font-size: 16px;
    padding: 0;
}
.cates ul li {
    height: 30px;
    line-height: 30px;
    margin: 10px 10px 10px 0;
    padding: 0 10px;
}
.cates ul li.active {
    background: $red;
    font-weight: normal;
}
.cates ul li.active a, .cates ul li.active a:hover {
    color: white;
}
.cates ul li a:hover {
    color: $red;
}
